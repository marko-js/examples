{
  "name": "library-ts",
  "version": "0.0.0",
  "description": "Marko library project with TypeScript",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist",
    "marko.json",
    "!**/*.test.*",
    "!*.tsbuildinfo",
    "!**/{,*.}stories.*"
  ],
  "scripts": {
    "@ci:build": "npm run build",
    "@ci:lint": "npm run lint",
    "@ci:test": "CI=true vitest --no-color",
    "build": "mtc && postcss ./src/**/*.css -d dist --base src",
    "clean": "rm -rf coverage dist node_modules/.{cache,vite*}",
    "format": "eslint --format unix --fix .; stylelint --formatter unix --fix '**/*.css'; prettier . --write --log-level=warn",
    "lint": "mtc && eslint --format unix . && stylelint --formatter unix '**/*.css' && prettier . --check --log-level=warn",
    "prepare": "husky",
    "storybook": "storybook dev",
    "test": "vitest"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@marko/compiler": "^5.39.41",
    "@marko/testing-library": "^6.4.1",
    "@marko/type-check": "^2.1.10",
    "@marko/vite": "^5.3.3",
    "@storybook/marko": "^10.0.0",
    "@storybook/marko-vite": "^3.0.0",
    "@types/node": "^24.10.0",
    "@vitest/browser": "^4.0.7",
    "@vitest/browser-playwright": "^4.0.7",
    "@vitest/browser-preview": "^4.0.7",
    "@vitest/coverage-istanbul": "^4.0.7",
    "eslint": "^9.39.1",
    "eslint-formatter-unix": "^9.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "marko": "^6.0.103",
    "playwright": "^1.56.1",
    "postcss-auto-modules": "^1.0.1",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-marko": "^3.3.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "storybook": "^9.0.16",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.2.1",
    "vitest": "^4.0.7"
  },
  "peerDependencies": {
    "marko": "5 - 6"
  }
}
