{
  "name": "library-ts",
  "version": "0.0.0",
  "description": "Marko library project with TypeScript",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist",
    "marko.json",
    "!**/*.test.*",
    "!*.tsbuildinfo",
    "!**/{,*.}stories.*"
  ],
  "scripts": {
    "@ci:build": "npm run build",
    "@ci:lint": "npm run lint",
    "@ci:test": "CI=true vitest --no-color",
    "build": "mtc && postcss ./src/**/*.css -d dist --base src",
    "clean": "rm -rf coverage dist node_modules/.{cache,vite,vitest}",
    "format": "eslint --format unix --fix .; stylelint --formatter unix --fix '**/*.css'; prettier . --write --log-level=warn",
    "lint": "mtc && eslint --format unix . && stylelint --formatter unix '**/*.css' && prettier . --check --log-level=warn",
    "prepare": "husky",
    "storybook": "storybook dev",
    "test": "vitest"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@marko/compiler": "^5.39.29",
    "@marko/testing-library": "^6.3.1",
    "@marko/type-check": "^2.0.0",
    "@marko/vite": "^5.2.0",
    "@storybook/marko": "^10.0.0",
    "@storybook/marko-vite": "^3.0.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-istanbul": "^3.2.4",
    "eslint": "^9.31.0",
    "eslint-formatter-unix": "^8.40.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "marko": "^5.37.41",
    "playwright": "^1.54.1",
    "postcss-auto-modules": "^1.0.1",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-marko": "^3.2.7",
    "prettier-plugin-packagejson": "^2.5.18",
    "storybook": "^9.0.16",
    "stylelint": "^16.21.1",
    "stylelint-config-standard": "^38.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "marko": "5 - 6"
  }
}
