{
  "name": "library-ts",
  "version": "0.0.0",
  "description": "Marko library project with TypeScript",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist",
    "marko.json",
    "!**/*.test.*",
    "!*.tsbuildinfo",
    "!**/{,*.}stories.*"
  ],
  "scripts": {
    "@ci:build": "npm run build",
    "@ci:lint": "npm run lint",
    "@ci:test": "CI=true vitest --no-color",
    "build": "mtc && postcss ./src/**/*.css -d dist --base src",
    "clean": "rm -rf coverage dist node_modules/.{cache,vite,vitest}",
    "format": "eslint --format unix --fix .; stylelint --formatter unix --fix '**/*.css'; prettier . --write --log-level=warn",
    "lint": "mtc && eslint --format unix . && stylelint --formatter unix '**/*.css' && prettier . --check --log-level=warn",
    "prepare": "husky",
    "storybook": "storybook dev",
    "test": "vitest"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@marko/compiler": "^5.39.13",
    "@marko/testing-library": "^6.2.0",
    "@marko/type-check": "^1.3.19",
    "@marko/vite": "^5.0.14",
    "@storybook/addon-essentials": "^8.6.4",
    "@storybook/addon-interactions": "^8.6.4",
    "@storybook/marko": "^9.0.3",
    "@storybook/marko-vite": "^2.0.4",
    "@vitest/browser": "^3.0.8",
    "@vitest/coverage-istanbul": "^3.0.8",
    "eslint": "^9.22.0",
    "eslint-formatter-unix": "^8.40.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "marko": "^5.37.20",
    "playwright": "^1.51.0",
    "postcss-auto-modules": "^1.0.1",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.5.3",
    "prettier-plugin-marko": "^3.1.12",
    "prettier-plugin-packagejson": "^2.5.10",
    "storybook": "^8.6.4",
    "stylelint": "^16.15.0",
    "stylelint-config-standard": "^37.0.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.2.1",
    "vitest": "^3.0.8"
  },
  "peerDependencies": {
    "marko": "4 - 5"
  }
}
