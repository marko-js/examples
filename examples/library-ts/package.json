{
  "name": "library-ts",
  "version": "0.0.0",
  "description": "Marko library project with TypeScript",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist",
    "marko.json",
    "!**/*.test.*",
    "!*.tsbuildinfo",
    "!**/{,*.}stories.*"
  ],
  "scripts": {
    "@ci:build": "npm run build",
    "@ci:lint": "npm run lint",
    "@ci:test": "CI=true vitest --no-color",
    "build": "mtc && postcss ./src/**/*.css -d dist --base src",
    "clean": "rm -rf coverage dist node_modules/.{cache,vite,vitest}",
    "format": "eslint --format unix --fix .; stylelint --formatter unix --fix '**/*.css'; prettier . --write --log-level=warn",
    "lint": "mtc && eslint --format unix . && stylelint --formatter unix '**/*.css' && prettier . --check --log-level=warn",
    "prepare": "husky",
    "storybook": "storybook dev",
    "test": "vitest"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@marko/compiler": "^5.39.4",
    "@marko/testing-library": "^6.2.0",
    "@marko/type-check": "^1.3.3",
    "@marko/vite": "^5.0.10",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/marko": "^9.0.2",
    "@storybook/marko-vite": "^2.0.3",
    "@vitest/browser": "^2.1.8",
    "@vitest/coverage-istanbul": "^2.1.8",
    "eslint": "^9.17.0",
    "eslint-formatter-unix": "^8.40.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^15.13.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "marko": "^5.37.4",
    "playwright": "^1.49.1",
    "postcss-auto-modules": "^1.0.1",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.4.2",
    "prettier-plugin-marko": "^3.1.12",
    "prettier-plugin-packagejson": "^2.5.6",
    "storybook": "^8.4.7",
    "stylelint": "^16.11.0",
    "stylelint-config-standard": "^36.0.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0",
    "vite": "^6.0.3",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "marko": "4 - 5"
  }
}
